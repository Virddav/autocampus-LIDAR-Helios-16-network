#include <stdio.h>
#include <stdlib.h>
#include <stdint.h>

unsigned int hex_to_decimal(const char* hex_value) {
    // Use strtoul to convert the hexadecimal string to an unsigned long
    unsigned int decimal_value = strtoul(hex_value, NULL, 16);
    return decimal_value;
}

int main() {
    const char* hex_value = "FF";
    unsigned int decimal_value = hex_to_decimal(hex_value);
    printf("The decimal representation of hex '%s' is %u.\n", hex_value, decimal_value);
    return 0;
}
